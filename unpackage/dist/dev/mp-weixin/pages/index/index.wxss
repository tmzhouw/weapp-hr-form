
page {
	background-color: #f5f7fa;
}
.container {
	min-height: 100vh;
	display: flex;
	flex-direction: column;
	padding: 40rpx;
}
.header {
	display: flex;
	flex-direction: column;
	align-items: center;
	margin-bottom: 60rpx;
	padding-top: 60rpx;
}
.logo {
	width: 180rpx;
	height: 180rpx;
	margin-bottom: 40rpx;
}
.title-container {
	text-align: center;
	width: 100%;
}
.title {
	font-size: 44rpx;
	font-weight: bold;
	color: #2C5697;
	margin-bottom: 24rpx;
	display: block;
	line-height: 1.3;
}
.subtitle-wrapper {
	padding: 0 30rpx;
	margin-bottom: 10rpx;
}
.subtitle {
	font-size: 28rpx;
	color: #666;
	line-height: 1.5;
}
.content {
	flex: 1;
	margin-bottom: 60rpx;
}
.card {
	display: flex;
	align-items: center;
	background-color: #fff;
	border-radius: 12rpx;
	padding: 30rpx;
	margin-bottom: 30rpx;
	box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
}
.card-icon {
	width: 60rpx;
	height: 60rpx;
	display: flex;
	align-items: center;
	justify-content: center;
	border-radius: 8rpx;
	margin-right: 30rpx;
	flex-shrink: 0;
	background-color: #2C5697;
}
.icon-text {
	color: #fff;
	font-weight: bold;
	font-size: 28rpx;
}
.card-content {
	flex: 1;
}
.card-title {
	font-size: 32rpx;
	font-weight: bold;
	color: #333;
	margin-bottom: 10rpx;
	display: block;
}
.card-desc {
	font-size: 26rpx;
	color: #666;
	line-height: 1.5;
}
.action-area {
	margin-bottom: 60rpx;
}
.action-btn {
	display: flex;
	justify-content: center;
	align-items: center;
	height: 100rpx;
	background-color: #2C5697;
	border-radius: 8rpx;
	box-shadow: 0 4rpx 10rpx rgba(44, 86, 151, 0.2);
}
.btn-text {
	font-size: 32rpx;
	font-weight: bold;
	color: #fff;
}
.btn-icon {
	font-size: 32rpx;
	color: #fff;
	margin-left: 10rpx;
}
.footer {
	text-align: center;
	padding: 30rpx 0;
}
.footer-text {
	font-size: 24rpx;
	color: #999;
}
  
